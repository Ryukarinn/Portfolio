public class ZooAnimal {
    private String name;
    private String type;
    private int age;

    // Constructor
    public ZooAnimal(String name, String type, int age) {
        this.name = name;
        this.type = type;
        this.age = age;
    }

    // Getters
    public String getName() {
        return name;
    }

    public String getType() {
        return type;
    }

    public int getAge() {
        return age;
    }

    // Setters
    public void setName(String name) {
        this.name = name;
    }

    public void setType(String type) {
        this.type = type;
    }

    public void setAge(int age) {
        this.age = age;
    }

    // Display animal info
    public void displayInfo() {
        System.out.println("Name: " + name);
        System.out.println("Type: " + type);
        System.out.println("Age: " + age);
    }

    // toString() method implementation
    @Override
    public String toString() {
        return "ZooAnimal{" +
                "name='" + name + '\'' +
                ", type='" + type + '\'' +
                ", age=" + age +
                '}';
    }

    // Main method for testing
    public static void main(String[] args) {
        // Create a ZooAnimal object
        ZooAnimal animal = new ZooAnimal("Lion", "Mammal", 5);

        // Display the animal info
        animal.displayInfo();

        // Print the string representation of the object using toString()
        System.out.println(animal.toString());

    }//end of main method
}//end of class


